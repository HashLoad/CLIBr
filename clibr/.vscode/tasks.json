{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++.exe build active file",
			"command": "D:\\mingw64\\bin\\clang++.exe",
			"args": [
				//"-Os",
				//"-s",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-B",
				"-g",
				"-std=c++20",
				"${workspaceFolder}\\*.cpp",
				"${workspaceFolder}\\commands\\console\\*.cpp",
				"${workspaceFolder}\\commands\\core\\*.cpp",
				"${workspaceFolder}\\commands\\horse\\*.cpp",
				"${workspaceFolder}\\commands\\update\\*.cpp",
				"${workspaceFolder}\\commands\\vcl\\*.cpp",
				"${workspaceFolder}\\commands\\*.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: D:\\mingw64\\bin\\clang++.exe"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: c++.exe build active file",
			"command": "D:\\mingw64\\bin\\c++.exe",
			"args": [
				//"-Os",
				//"-s",
				"-B",
				"-g",
				"-std=c++20",
